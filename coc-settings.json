{
  "languageserver": {
    "hdlChecker": {
      "command": "hdl_checker",
      "args": ["--lsp"],
      "filetypes": ["vhdl", "verilog", "systemverilog"]
    },
    "haskell": {
      "command": "haskell-language-server-wrapper",
      "args": ["--lsp"],
      "rootPatterns": [
        "*.cabal",
        "stack.yaml",
        "cabal.project",
        "package.yaml",
        "hie.yaml"
      ],
      "filetypes": ["hs", "haskell", "lhaskell"],
      "formattingProvider": "stylish-haskell"
    }
  }
}
